package com.online.flowers;

import static org.mockito.Mockito.when;

import org.junit.jupiter.api.BeforeAll;
import org.junit.runner.RunWith;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.test.mock.mockito.MockBean;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.test.context.junit4.SpringRunner;

import com.online.flowers.controller.FlowersController;

@SpringBootTest
@RunWith(SpringRunner.class)
public class FlowersApplicationControllerTest {
	
	@MockBean
	private FlowersController _controller;
	
	static TestData testData = new TestData();
	
	@BeforeAll
	public static void setUp() {
		testData.SetUp();
	}
	
	public void registerUserTest() {
		when(_controller.registerUser(TestData.getCustomerModel())).thenReturn(new ResponseEntity<String>("User is registered", HttpStatus.CREATED));
	}
}
