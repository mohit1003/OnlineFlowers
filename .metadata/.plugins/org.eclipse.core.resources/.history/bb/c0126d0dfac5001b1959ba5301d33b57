package com.online.flowers.service;

import org.modelmapper.ModelMapper;
import org.springframework.stereotype.Component;

import com.online.flowers.dto.Customer;
import com.online.flowers.model.CustomerModel;

@Component
public class DtoMapperService {
	private ModelMapper _mapper;
	
	public Customer convertToCustomerDto(CustomerModel customerToSend) {
		return _mapper.map(customerToSend, Customer.class);
	}
	

}
